<html lang="en">
  <head>
    <meta name="theme-color" content="#36393f" />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <link rel="icon" type="image/png" href="<%=domain%>/logo.png" />
    <title>Luna - Home</title>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <meta name="title" content="Luna • The best goddess for your discord server" />

    <meta property="og:image" content="<%=domain%>/logo.png" />
    <meta
      property="og:title"
      content="Luna • The best goddess for your discord server"
    />
    <meta
      property="og:description"
      content="Luna • The best goddess for your discord server"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
      crossorigin="anonymous"
    />
  </head>
  <body>
    <noscript>
      <div class="noscript">
        To view the page please enable Javascript in your browser
      </div>
    </noscript>
    <script type="text/javascript">
      var preload = document.createElement('div')
      preload.className = 'loading-screen'
      preload.innerHTML =
        '<div class="lds-ring"><div></div><div></div><div></div><div></div></div>'
      document.body.appendChild(preload)
      window.addEventListener('load', function () {
        preload.className += ' fade'
      })
      setTimeout(function () {
        preload.style.display = 'none'
      }, 600)
    </script>

    <a id="logo" class="shine"  href="/">
      Luna
    </a>
    <div id="navbar">
      <a href="#features">Features</a
      ><a href="/discord" target="_blank">Discord</a
      ><a href="/status" target="_blank">Status</a>
    </div>

    <% if (user) { %>
    <div class="user-dropdown">
      <div id="login">
        <%= user.username %>
        <i class="fa fa-caret-down"></i>
        <div class="dropdown-content">
          <a href="/panel">Dashboard</a>
          <a href="/me">Settings</a>
          <a href="/farm" style="color: rgb(71, 205, 75)">(New) Farm</a>
          <a href="/logout" style="color: red">Logout</a>
        </div>
      </div>
    </div>
    <% } else { %><a id="login" href="/login">Login</a><% } %>
    <div id="lg">
      <div id="login-hamburger">
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/#features" class="nav-link">Features</a>
          </li>
          <li class="nav-item">
            <a href="/discord" class="nav-link">Discord</a>
          </li>
          <li class="nav-item">
            <a href="/status" class="nav-link">Status</a>
          </li>
          <li class="nav-item">
            <% if (user) { %>
            <div class="user-dropdown">
              <div>
                <a><%= user.username %></a>
                <i class="fa fa-caret-down"></i>
                <div class="dropdown-content">
                  <a href="/panel">Dashboard</a>
                  <a href="/me">Settings</a>
                  <a href="/logout" style="color: red">Logout</a>
                </div>
              </div>
            </div>
            <% } else { %><a id="user" href="/login">Login</a><% } %>
          </li>
        </ul>
        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </div>
    </div>
    <h1>The <span class="shine">best</span> bot <br />for discord</h1>
    <a
      style="z-index: 10; position: relative;"
      onclick="PopupCenter('https://discord.com/oauth2/authorize?client_id=<%= config.client_id %>&scope=bot&permissions=270126169&response_type=code&redirect_uri=<%= config.domain %>/panel',
'Add Lunas to your server.', 500, 666)"
      ><div class="buttondiv">
        <button class="homeButton">
          <i class="fab fa-discord fa-2x"></i>Add to Discord
        </button>
      </div>
    </a>
    <div id="features"></div>
    <div id="features-div">
      <div id="section-top">
        <div id="section2" class="section">
          <div data-aos="zoom-in">
            <h5>Dashboard</h5>
            <h6>
              A feature-rich, configurable web dashboard to help customize the
              bot in your discord server.
            </h6>
          </div>
        </div>
        <div id="section3" class="section">
          <div data-aos="zoom-in">
            <h5>Fun & Useful</h5>
            <h6>
              The perfect bot to boost your server and easiest settings.
            </h6>
          </div>
        </div>
      </div>
      <div id="section-bottom">
        <div id="section4" class="section">
          <div data-aos="zoom-in">
            <h5>Premium</h5>
            <h6>
              Want more than the default features? Luna has a premium system
              that offers much more feature!
            </h6>
          </div>
        </div>
        <div id="section5" class="section">
          <div data-aos="zoom-in">
            <h5>Easy to use</h5>
            <h6>
              Go step-by-step through our settings and exploring you can find
              unique feature
            </h6>
          </div>
        </div>
      </div>

      <div id="footer">
        <hr />
        <div id="left-footer">
          © 2022 Luna Development
        </div>
        <div id="right-footer">
          <a href="/contact">Contact</a
          ><a href="/discord" target="_blank">Discord</a
          ><a href="/panel" target="_blank">Dashboard</a
          ><a href="/policy">Privacy Policy</a>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/home.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init()
    </script>
  </body>
</html>
